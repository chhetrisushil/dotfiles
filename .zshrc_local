# misc alias
changelog() {
    local GT=$(env -i git log --pretty="%s" $(git describe --tags --abbrev=0)..HEAD)

    if [ -z "$GT" ]
    then
        GT=$(env -i git log --pretty="%s" "$(git describe --abbrev=0 --tags $(git describe --abbrev=0)^)...$(git describe --abbrev=0)")
    fi
    echo "$GT"
}

