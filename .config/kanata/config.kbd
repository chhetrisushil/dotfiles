(defcfg
  process-unmapped-keys yes
)

(defsrc
  tab
  caps
  \
  f h j k l
)

(defalias
  c2cNe (tap-hold-press 200 200 esc lctl)
  t2sNt (tap-hold-press 200 200 tab lmet)
  b2sNb (tap-hold-press 200 200 \ lmet)
  arr (tap-hold-press 200 200 f (layer-while-held arrow))
)

(deflayer qwerty
  @t2sNt
  @c2cNe
  @b2sNb
  @arr _ _ _ _
)

(deflayer arrow
  _
  _
  _
  _ left down up right
)
