                        , Run DynNetwork ["-t", "<fn=1></fn> <rx>KB/<fn=1></fn> <tx>KB"] 10
--                        , Run Volume "pulse" "Master" ["-t", "Pulse: <volume>% <status>"] 10
                        , Run BatteryP ["BAT1"]
                          ["-t", "<acstatus><left>%",
                           "-L", "10", "-H", "80", "-p", "3", "--",
                           "-O", "", "-o", "<fc=red>B:</fc>",
                           "-i", "", "-l", "red", "-m", "blue",
                           "-h", "green"]
                          10
                        , Run Weather "VOBL" ["-t", "<tempC>C"] 50
                        , Run Com "/home/chhetrisushil/scripts/bin/trayer-padding-icon.sh" [] "trayerpad" 20
                        , Run MPD ["-t", "<statei> <artist> - <title>", "--"
                        , "-p", "6600"
                        , "-h", "127.0.0.1"
                        , "-P", "<fn=1></fn>"
                        , "-S", "<fn=1></fn>"
                        , "-Z", "<fn=1></fn>"
                        ] 10
                        , Run Com "bash" ["-c", "mpc volume | awk '{print $2}'"] "mpd_vol" 10
                        , Run StdinReader
                    ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " <fc=#b8bb26>%dynnetwork%</fc> %StdinReader%}{<fc=#d3869b><fn=1></fn> MPD: [<fn=1><action=`mpc volume +5` button=1><action=`mpc volume -5` button=3></action></action></fn><action=`mpc volume +5` button=1><action=`mpc volume -5` button=3>+/-</action></action> <action=`mpc volume 0` button=1>%mpd_vol%</action> <action=`mpc toggle` button=1>%mpd%</action>]</fc> <fc=#928374>|</fc> <fc=#458588><fn=1></fn> %VOBL%</fc> <fc=#928374>|</fc> <fc=#d79921><fn=1></fn>%battery%</fc> <fc=#928374>|</fc> <fc=#d3869b>%uname%</fc> %trayerpad%"
