--                        , Run Volume "pulse" "Master" ["-t", "Pulse: <volume>% <status>"] 10
                        , Run BatteryP ["BAT1"]
                          ["-t", "<acstatus><left>%",
                           "-L", "10", "-H", "80", "-p", "3", "--",
                           "-O", "", "-o", "<fc=red>B:</fc>",
                           "-i", "", "-l", "red", "-m", "blue",
                           "-h", "green"]
                          10
                        , Run Weather "VOBL" ["-t", "<tempC>C"] 50
                        , Run Com "/home/chhetrisushil/scripts/bin/trayer-padding-icon.sh" [] "trayerpad" 20
                        , Run MPD ["-t", "<action=`mpc toggle`><action=`mpc stop` button=3><fn=1></fn> <artist> - <title></action></action> <action=`mpc prev`><fn=1></fn></action> <action=`mpc toggle`><statei></action> <action=`mpc next`><fn=1></fn></action>", "--"
                        , "-p", "6600"
                        , "-h", "127.0.0.1"
                        , "-Z", "<fn=1></fn>"
                        , "-S", "<fn=1></fn>"
                        , "-P", "<fn=1></fn>"
                        ] 10
                        , Run Com "bash" ["-c", "mpc volume | awk -F '[^0-9%]*' '$0=$2'"] "mpd_vol" 10
                        , Run StdinReader
                    ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " <fc=#b8bb26>%dynnetwork%</fc> %StdinReader%}{\

